%script{:src => '/scripts/bb.js', :type => 'text/javascript'}
%script{:src => '/scripts/jquery.js', :type => 'text/javascript'}
:css
  div.right_col {
  background-color: #e0eaea;
  max-height: 40000px;
  min-width: 640px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 2px;
  padding-top: 2px;  
  margin-left: 15%;
  margin-right: 15%;
  }
  .bb_bar img {
  zoom: 150%;
  cursor:pointer;
  }
  .textarea {
  margin-bottom: 12px;
  font-size: 22px;
  }
  .post {
  zoom: 150%;
  }
  .from {
  zoom: 150%;
  margin-bottom: 12px;
  margin-top: 12px;
  }
  td img {  
  max-width: 320px;
  height: auto;
  width: 100%;
  }
.right_col
  %form{:name => "index", :id =>'index', :method => "POST", :enctype => "multipart/form-data"}
    %table{:style => 'font-size: 26;', :cellpadding => 8, :width => '100%'}
      %tr
        %td{:align => 'center', :style => 'font-size: 32;'}
          %a{:href => "/news?id=#{locals[:news][:id]}"} #{locals[:news][:title]}
      %tr
        %td{:align => 'center', :style => 'font-size: 16;'}
          #{locals[:news][:date].strftime("%Y/%m/%d %H:%M:%S")}
      %tr
        %td{:height => 32}
      %tr
        %td{:style => 'font-size: 26; word-break: break-all;'}
          #{locals[:news][:text]}
      %tr
        %td{:style => 'font-size: 26;', :align => 'right'}
          #{locals[:news][:author]}
    %hr{:size => 8, :color => 'white'}
    -locals[:comments].each do |comment|
      %table{:style => 'font-size: 26;', :cellpadding => 8, :width => '100%'}
        %tr
          %td{:align => 'center', :style => 'font-size: 16;'}
            #{comment[:date].strftime("%Y/%m/%d %H:%M:%S")}
        %tr
          %td{:height => 32}
        %tr
          %td{:style => 'font-size: 26; word-break: break-all;'}
            #{comment[:text]}
        %tr
          %td{:style => 'font-size: 26;', :align => 'right'}
            #{comment[:author]}
      %hr{:size => 8, :color => 'white'}
    %div{:align => 'center'}
      .bb_bar
        %img{:src => '/bb_icons/bold.png', :alt => 'Bold', :onClick => "insert('b')"}
        %img{:src => '/bb_icons/italic.png', :alt => 'Italic', :onClick => "insert('i')"}
        %img{:src => '/bb_icons/underline.png', :alt => 'Underline', :onClick => "insert('u')"}
        %img{:src => '/bb_icons/align_justify.png', :alt => 'Center', :onClick => "insert('center')"}
        %img{:src => '/bb_icons/blockquote.png', :alt => 'Quote', :onClick => "insert('quote')"}
        %img{:src => '/bb_icons/insert_link.png', :alt => 'Link', :onClick => "insert('url')"}
        %img{:src => '/bb_icons/insert_image.png', :alt => 'Image', :onClick => "insert('image')"}
        %img{:src => '/bb_icons/insert_youtube.png', :alt => 'Video YouTube', :onClick => "insert('youtube')"}
      %textarea.textarea{:type => 'text',:id => 'bb_textarea', :name => 'bb_textarea', :rows => 5, :cols => 40}
      %div.from{:align => 'center'}
        From: &nbsp
        %input{:type => 'text', :name => 'from', :size => '30px'}
      %input.post{:type => 'submit', :value => 'Add commentary'}      